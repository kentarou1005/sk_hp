= form_for @myfile do |f|
  - if @myfile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@myfile.errors.count, "error")} prohibited this myfile from being saved:"
      %ul
        - @myfile.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :filename
    = f.text_field :filename
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save'
